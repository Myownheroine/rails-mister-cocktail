<h1><%= @cocktail.name %></h1>

<ul>
  <% @cocktail.doses.each do |dose| %>
    <li> <%= dose.ingredient.name %> : <%= dose.description %>
      <%= link_to "Remove this dose", cocktail_dose_path(@cocktail, dose), method:
:delete, data: { confirm: 'Are you sure?' }%>
    </li>
  <% end %>
</ul>

<%= link_to "Back to all cocktails", cocktails_path %>
<%= link_to "Add a dose boss !",  new_cocktail_dose_path(@cocktail)%>


